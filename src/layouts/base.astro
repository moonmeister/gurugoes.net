---
const posts = [
	{ uri: "/", title: "Home" },
	{ uri: "/category/hiking/", title: "Hiking" },
	{
		uri: "/hiking/fkt-appalachian-high-route/",
		title: "FKT: Appalachian High Route",
	},
	{
		uri: "/cdt/lake-city-to-salida-co/",
		title: "Lake City to Salida, CO",
	},
];

import Layout from "./layout";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="stylesheet preload"
			href="https://rsms.me/inter/inter.css"
		/><link
			rel="stylesheet preload"
			href="https://rsms.me/inter/inter.css"
		/><title>GuruGoes</title></head
	>
</html>
<body>
	<nav>
		{
			posts.map(({ uri, title }) => {
				return (
					<>
						<br />
						<a href={uri}>{title}</a>
					</>
				);
			})
		}
	</nav>
	<Layout>
		<slot />
	</Layout>
</body>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
